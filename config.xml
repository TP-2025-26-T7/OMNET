<config>
    <!-- Auto-assign addresses to the simulated PPP links (your NED uses pppg connections everywhere) -->
    <interface hosts="*" names="ppp" address="10.x.x.x" netmask="255.x.x.x"/>

    <!-- External emulation interface on controller -->
    <interface hosts="controller" names="eth0" address="10.255.0.2" netmask="255.255.255.252"/>

    <!-- So controller can reply to real hosts (default route via the veth-host side) -->
    <route hosts="controller"
           destination="0.0.0.0" netmask="0.0.0.0"
           gateway="10.255.0.1" interface="eth0"/>
</config>