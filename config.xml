<config>

    <!-- External emulation on controller -->
    <interface hosts="controller" names="eth0"
               address="10.255.0.2" netmask="255.255.255.252"/>

    <route hosts="controller"
           destination="0.0.0.0" netmask="0.0.0.0"
           gateway="10.255.0.1" interface="eth0"/>

    <!-- Internal links -->
    <interface hosts="**" names="ppp*"
               address="10.0.x.x" netmask="255.255.255.252"/>

</config>